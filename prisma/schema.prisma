generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  createdAt DateTime @default(now())

  routes    RouteSuggestion[]
}

model Station {
  id        Int      @id @default(autoincrement())
  name      String
  code      String   @unique
}

model Train {
  id          Int      @id @default(autoincrement())
  trainNumber String   @unique
  name        String

  schedules   Schedule[]
}

model Schedule {
  id          Int      @id @default(autoincrement())
  trainId     Int
  sourceId    Int
  destinationId Int
  departureTime DateTime
  arrivalTime   DateTime

  train        Train    @relation(fields: [trainId], references: [id])
}

model LiveStatus {
  id          Int      @id @default(autoincrement())
  trainId     Int
  delayMinutes Int
  crowdLevel  String   @check(crowdLevel IN ("Low", "Medium", "High"))
  updatedAt   DateTime @default(now())

  train       Train    @relation(fields: [trainId], references: [id])
}

model RouteSuggestion {
  id        Int      @id @default(autoincrement())
  userId    Int
  fromStation String
  toStation   String
  suggestion  String
  createdAt DateTime @default(now())

  user      User @relation(fields: [userId], references: [id], onDelete: Cascade)
}
